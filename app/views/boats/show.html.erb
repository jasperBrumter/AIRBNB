<div class="wrapper">
  <%= image_tag("homepagebackground3.jpg", class: "showimage") %>
  <div class="container boat-information">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1 col-sm-9 col-sm-offset-0">
        <div >
          <h2><%= @boat.name %></h2>
          <p><%= @boat.price %></p>
          <p><%= @boat.number_of_crew %></p>
        </div>
      </div>

      <div class="col-xs-10 col-xs-offset-1 col-sm-3 col-sm-offset-0">
        <div class="contact-information">
          <div class="contact-text">
            <h3><%= @boat.name %></h3>
            <p>Member since: July 2018</p>
          </div>
          <div class="contact-buttons">
            <%= link_to "book", edit_boat_path(@boat.id), class: "bookbutton" %>
            <%= link_to "edit", edit_boat_path(@boat.id), class: "editbutton" %>
            <%= link_to "delete", edit_boat_path(@boat.id), class: "deletebutton" %>
          </div>
        </div>
      </div>

    </div>



  </div>
</div>

